<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tripmomentSQL">
	<select id="getPop_seq" parameterType="String"
		resultType="tripPop">
		select * from trippop where pop_name = #{pop_name}
	</select>

	<insert id="tripmomment_write" parameterType="tripmoment">
		insert into
		tripmoment values(moment_seq.nextval,
		#{moment_title},
		#{moment_content},
		sysdate,
		#{member_seq},
		#{pop_name}
		)
	</insert>

	<insert id="getTripmomentImg" parameterType="img">
		insert into Img
		values(img_seq.nextval,
		#{img_name},
		#{img_path},
		'8',
		moment_seq.currval,
		#{main_seq},
		#{mainImg})

	</insert>

	<select id="onTripmoment" resultType="mainTripmoment">
		select moment_seq, moment_content, img_path, img_name
		from tripmoment
		join img on(seq = moment_seq)
		where mainimg = 'T'and content_seq = 8
	</select>

</mapper>